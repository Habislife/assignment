#include <stdio.h>
   
int trainglenumber=0;
int number;
int main()

{
	printf("the number of n th term in number \n");
	printf("number \n");
	scanf("%d", &number);
	printf("table of traingle number\n");
	printf("number = traingle number\n");
int i ;
for(i=1; i<=number;i=i+1)
{
trainglenumber=trainglenumber+i;
	printf("%d = %d\n",i,trainglenumber);
}
    return 0;
}
